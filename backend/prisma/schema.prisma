generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  uid       String    @unique
  name      String
  email     String    @unique
  phone     String?
  dob       DateTime? @default(dbgenerated("'1970-01-01'::date"))
  gender    String?   @default("OTHER")
  avatar    String?
  isActive  Boolean   @default(true)
  role      Role      @relation(fields: [roleId], references: [id])
  roleId    Int
  tickets   Ticket[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([roleId])
}

model Role {
  id    Int        @id @default(autoincrement())
  name  RoleName   @unique
  users User[]
}

model Brand {
  id               Int       @id @default(autoincrement())
  name             String    @unique
  phoneNumber      String?
  image            String?
  address          String?
  dailyTicketLimit Int       @default(100)
  buses            Bus[]
  routes           Route[]
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@index([name])
}

model Bus {
  id          Int         @id @default(autoincrement())
  name        String
  licensePlate String     @unique
  seatCount   Int
  category    BusCategory
  seatType    SeatType
  berthType   BerthType?  // Chỉ dùng cho xe giường nằm
  brand       Brand       @relation(fields: [brandId], references: [id])
  brandId     Int
  seats       Seat[]
  schedules   Schedule[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([category])
  @@index([seatType])
  @@index([berthType])
  @@index([brandId])
}

model Seat {
  id          Int       @id @default(autoincrement())
  seatNumber  Int
  code        String    @unique
  isAvailable Boolean   @default(true)
  price       Float     // Giá ghế
  floor       Int?      // Tầng 1 hoặc 2
  roomType    RoomType?
  bus         Bus       @relation(fields: [busId], references: [id])
  busId       Int
  tickets     Ticket[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([busId])
}

model Route {
  id               Int        @id @default(autoincrement())
  startPoint       String     // Luôn là "Bến Xe Miền Đông"
  endPoint         String
  averageDurationMin Int
  lowestPrice      Float
  distanceKm       Float?
  brand            Brand?     @relation(fields: [brandId], references: [id])
  brandId          Int?
  schedules        Schedule[]
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  @@index([startPoint])
  @@index([endPoint])
}

model Schedule {
  id            Int            @id @default(autoincrement())
  bus           Bus            @relation(fields: [busId], references: [id])
  busId         Int
  route         Route          @relation(fields: [routeId], references: [id])
  routeId       Int
  departureAt   DateTime
  arrivalAt     DateTime
  status        ScheduleStatus @default(UPCOMING)
  tickets       Ticket[]
  dropoffPoints DropoffPoint[] // ← MỚI: Danh sách điểm trả khách
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([busId])
  @@index([routeId])
  @@index([status])
  @@index([departureAt])
}

model DropoffPoint {
  id         Int       @id @default(autoincrement())
  schedule   Schedule  @relation(fields: [scheduleId], references: [id])
  scheduleId Int
  name       String    // VD: "Bến Xe Miền Tây", "VP Phương Trang Q.10", "Tận nơi Q.1"
  address    String?   // Địa chỉ chi tiết (nếu có)
  surcharge  Float     @default(0)     // Phụ thu (0đ nếu miễn phí)
  isDefault  Boolean   @default(false) // Điểm trả mặc định (thường là bến xe)
  order      Int       @default(0)     // Thứ tự hiển thị
  tickets    Ticket[]                 // Những vé chọn điểm trả này
  createdAt  DateTime  @default(now())

  @@index([scheduleId])
  @@index([isDefault])
}

model Ticket {
  id               Int           @id @default(autoincrement())
  user             User          @relation(fields: [userId], references: [id])
  userId           Int
  schedule         Schedule      @relation(fields: [scheduleId], references: [id])
  scheduleId       Int
  seat             Seat          @relation(fields: [seatId], references: [id])
  seatId           Int
  price            Float         // Giá ghế (chưa tính phụ thu)
  surcharge        Float         @default(0)   // Phụ thu điểm trả (tự động cập nhật)
  totalPrice       Float         @default(0)   // price + surcharge (dùng để hiển thị)
  status           TicketStatus  @default(BOOKED)
  paymentMethod    PaymentMethod?
  dropoffPoint     DropoffPoint? @relation(fields: [dropoffPointId], references: [id])
  dropoffPointId   Int?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  // Quan hệ thanh toán nhóm
  paymentHistoryId Int?
  paymentHistory   PaymentHistory? @relation(fields: [paymentHistoryId], references: [id])
  ticketPayments   TicketPayment[]

  @@index([userId])
  @@index([scheduleId])
  @@index([status])
  @@index([paymentHistoryId])
  @@index([dropoffPointId])
}

model PaymentHistory {
  id             Int              @id @default(autoincrement())
  method         PaymentMethod
  amount         Float            // Tổng tiền (bao gồm cả phụ thu)
  transactionId  String?
  status         String           @default("PENDING") // PENDING, SUCCESS, FAILED
  qrCode         String?
  ticketCode     String?          // Mã đặt vé: VX250421001
  seatList       String?          // "A01, A02, B05"
  seatCount      Int              @default(0)
  paidAt         DateTime?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  tickets        Ticket[]
  ticketPayments TicketPayment[]

  @@map("payment_history")
  @@index([ticketCode])
  @@index([createdAt(sort: Desc)])
}

model TicketPayment {
  id         Int           @id @default(autoincrement())
  ticketId   Int
  paymentId  Int
  createdAt  DateTime      @default(now())

  ticket     Ticket        @relation(fields: [ticketId], references: [id])
  payment    PaymentHistory @relation(fields: [paymentId], references: [id])

  @@unique([ticketId, paymentId])
  @@index([ticketId])
  @@index([paymentId])
}

// ==================== ENUMS ====================

enum RoleName {
  ADMIN
  PASSENGER
}

enum BusCategory {
  MINIVAN
  COACH
  LIMOUSINE
  SLEEPER
  VIP
}

enum SeatType {
  SEAT
  BERTH
}

enum BerthType {
  SINGLE
  DOUBLE
}

enum RoomType {
  SINGLE
  DOUBLE
}

enum ScheduleStatus {
  UPCOMING
  ONGOING
  COMPLETED
  CANCELLED
  FULL
  FEW_SEATS
}

enum TicketStatus {
  BOOKED
  PAID
  CANCELLED
}

enum PaymentMethod {
  CASH
  CREDIT_CARD
  MOMO
  ZALOPAY
}